{
    "name": "barbiefortes04-jpg/munchkly",
    "type": "project",
    "description": "Munchkly - A Twitter-like social media application built with Laravel",
    "keywords": ["framework", "laravel", "social media", "twitter", "munchkly"],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.2",
        "laravel/framework": "^10.10",
        "laravel/sanctum": "^3.2",
        "laravel/tinker": "^2.8"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi || true"
        ],
        "post-install-cmd": [
            "php -r \"if (!file_exists('vendor/nette/schema/src/Schema/Schema.php')) { echo 'WARNING: nette/schema validation failed'; }\"",
            "@php artisan storage:link --ansi || true"
        ],
        "post-update-cmd": [
            "php -r \"if (!file_exists('vendor/nette/schema/src/Schema/Schema.php')) { echo 'WARNING: nette/schema validation failed'; }\"",
            "Illuminate\\Foundation\\ComposerScripts::postUpdate"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "8.1"
        },
        "discard-changes": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
